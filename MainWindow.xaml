<Window x:Class="IndentDmisCode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IndentDmisCode"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        SizeToContent="Height">
    <Grid>
        <StackPanel>
            <Label>Folder containing dmi files</Label>
            <StackPanel>
                <DockPanel>
                    <Button Name="btnBrowse" Content="Browse" DockPanel.Dock="Right" Click="btnBrowse_Click" MinWidth="75"
                            Margin="2.5"/>
                    <TextBox Name="txtFolder"
                             Margin="2.5"></TextBox>
                </DockPanel>
            </StackPanel>
            <Button x:Name="btnGo" Click="btnGo_Click" Content="GO" HorizontalAlignment="Right" MinWidth="75" Margin="2.5"/>
        </StackPanel>
    </Grid>
</Window>
